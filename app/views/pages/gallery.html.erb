<!-- Jumbotron Header -->
	<header class="jumbotron banner bannerheader">
		<h1>The PbN Gallery</h1>
		<p>View the amazing Paint By Numbers projects that our users have created.</p>
		<p>Click on each project to show more information about each piece. Or share it to social media.</p>
		<p><a class="btn btn-default btn-lg" ng-href="/create">Or create your own!</a>
		</p>
	</header>

<div class="container-fluid">
	<hr>

	<!-- Title -->
	<div class="row">
		<div class="col-lg-12">
			<h3>Latest Paintings</h3>
		</div>
	</div>
	<!-- /.row -->

	<!-- Page Features -->
	<div class="row text-center">
		<% @paintings.each do |painting| %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= painting.url %>" alt="">
					<div class="caption">
						<hr>
						<h3><%= painting.title %></h3>
						<!-- <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p> -->
						<div>
							<a href="#" class="btn btn-primary">Share</a>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<!-- /.row -->
</div>
