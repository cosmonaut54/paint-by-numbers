<!-- Jumbotron Header -->
	<header class="jumbotron banner bannerheader">
		<h1>The Paintdrop Gallery</h1>
		<p>Browse through the amazing gallery of paintings created by our users and share them.</p>
		<p><a class="btn btn-default btn-lg" href="/create">Or create your own!</a>
		</p>
	</header>

<div class="container-fluid">
	<hr>

	<!-- Title -->
	<div class="row">
		<div class="col-lg-12">
			<h3>Latest Paintings</h3>
		</div>
	</div>
	<!-- /.row -->

	<!-- Page Features -->
	<div class="row text-center">
		<% @paintings.each do |painting| %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= painting.url %>" alt="">
					<div class="caption">
						<hr>
						<h3><%= painting.title %></h3>
						<p>By <%= painting.user.name %></p>
						<div>
							<a href="#" class="btn btn-primary">Share</a>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<!-- /.row -->
</div>
