<div class="container-fluid create">
	<div class="row">
		<div class="col-md-3 tools">
			<h1>Create a new Painting</h1>
			<hr>
			<%= form_tag({ controller: 'svg', action: 'create' }, { id: 'fileUpload', class: 'dropzone' }) do %>
			<% end %>
			<h3>Tools:</h3>
			<a href="#" class="btn btn-default glyphicon glyphicon-erase" id="eraser"> Eraser</a>
			<a href="#" class="btn btn-default glyphicon glyphicon-repeat" id="reset"> Reset</a>
			<a href="#" class="btn btn-default glyphicon glyphicon-download-alt" id="download" download="paintdrop.jpg"> Download</a>
			<hr>
			<% if current_user %>
				<h3>Add to the gallery:</h3>
				<%= form_for :painting, :html => { :multipart => true }, :url => paintings_url do |f| %>
					<%= f.text_field :title, placeholder: "Title your painting", class: "form-control" %>
					<%= f.hidden_field :url, class: "form-control" %><br>
					<%= f.submit "Save", class: "btn btn-default" %>
				<% end %>
			<% else %>
				<div class="text-center">
					<p>Share your painting to our global gallery!</p>  
					<p><a href="/signup">Sign up</a> or <a href="/login">login</a>.</p>
				</div>
			<% end %>
		</div>
		<div class="col-md-5">
			<canvas id="canvas"></canvas>
		</div>
		<div class="col-md-3 key">
			<h3 class="">Choose a color: </h3>
			<hr>
			<ul id="swatches" class="list-group">
				<script type="text/template" id="color-template">
					<div class="col-md-4">
						<li class="color-picker list-group-item" data-color="<%%= color %>">
							<span><%%= index %> = </span>
							<div class="swatch" style="background-color: <%%= color %>"></div>
						</li>
					</div>
				</script>
			</ul>
		</div>
	</div>
</div>
